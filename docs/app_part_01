      setAvailableClasses(prev => [...prev, newClass]);
      alert('×§×‘×•×¦×” ×—×“×©×” × ×•×¦×¨×” ×‘×”×¦×œ×—×”! ××¡×¤×¨ ×—×•×’: ' + newId);
      setCurrentView('waiting-room');
    };

